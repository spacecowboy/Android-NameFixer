<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<CheckBox android:text="First Last" android:id="@+id/firstlastcheck" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingRight="25sp"/>
		<CheckBox android:text="Comma separator" android:id="@+id/commacheck" android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	</LinearLayout>
	<ListView android:layout_width="fill_parent" android:id="@+id/contactList"
		android:layout_height="wrap_content" android:layout_weight="1" />
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/targetAccountLabel" />
	<Spinner android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/accountSpinner" />
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/fixNamesButton"
		android:text="Write new names" />
</LinearLayout>
